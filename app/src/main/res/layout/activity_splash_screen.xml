<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/color_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.splash.SplashScreenActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="@dimen/width_logo_splash"
        android:layout_height="@dimen/height_logo_splash"
        android:contentDescription="@string/splash_screen"
        android:src="@drawable/logo_splash_screen" />

    <TextView
        android:id="@+id/tvNameApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:alpha="0.5"
        android:fontFamily="@font/poppins_extra_bold"
        android:text="@string/app_name"
        android:textColor="@color/font_color_primary"
        android:textSize="@dimen/textSize_24sp" />

</LinearLayout>